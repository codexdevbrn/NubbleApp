{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@components/*": ["src/components/*"],
            "@screens/*": ["./src/screens/*"],
            "@hooks/*": ["./src/hooks"],
            "@routes/*": ["./src/routes"],
            "@theme/*": ["./src/theme"],
            "@domain/*": ["./src/domain"],
            "@brand/*": ["./src/brand"],
            "@api/*": ["./src/api"]
        }
    }
}
